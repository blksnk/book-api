{
  "connection": "default",
  "collectionName": "photo_collections",
  "info": {
    "name": "photo_collection"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "date": {
      "type": "date"
    },
    "photos": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    }
  }
}
